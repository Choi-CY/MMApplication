<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:paddingTop="30dp"
    tools:context=".market.ChecklistActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#fff">
        <ScrollView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fdddde"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:fontFamily="@font/nanum"
                    android:id="@+id/c_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/bar1" />
                <View
                    android:id="@+id/bar2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#fdddde"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    tools:layout_editor_absoluteX="44dp" />

                <!-- - - - - - - 글쓴이 정보 - - - - - - -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/c_userid"
                        android:fontFamily="@font/nanum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp" />
                    <View
                        android:id="@+id/bar3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#fdddde" />

                    <TextView
                        android:id="@+id/c_post_date"
                        android:gravity="right"
                        android:fontFamily="@font/nanum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="30dp"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="5dp"

                        android:textSize="15dp" />
                </LinearLayout>

                <!-- - - - - - 본 문 - - - - - - -->
                <ImageView
                    android:id="@+id/c_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bar2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/c_textview"
                    android:text=""
                    android:fontFamily="@font/nanum"
                    android:textSize="20dp" />

                <!-- - - - - - - 댓 글 - - - - - - -->
                <View
                    android:id="@+id/bar4"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="#fdddde"
                    android:layout_marginTop="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="댓 글"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <View
                    android:id="@+id/bar5"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#9E9E9E"/>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>
</LinearLayout>