<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/layout_c"
    android:gravity="center"
    android:paddingBottom="15dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/imageViewleft_c"
        android:background="#888888"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chatbot_image"
                android:src="@drawable/robot4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/backgrounds">
                <TextView
                    android:id="@+id/text_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:text ="text"
                    android:fontFamily="@font/nanum"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/using_image"
                    />
            </LinearLayout>
        </LinearLayout>




    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/imageViewright_c"
        android:background="#888888"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />
</LinearLayout>